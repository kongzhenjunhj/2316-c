//5
#include<stdio.h>
#include<math.h>
void bin(int n)
{
	int i = 1;
	int num = 1;
	int arr[10] = { 0 };
	arr[0] = 1;
	while (1)
	{
		i *= 2;
		if (n < i)
		{
			i /= 2;
			break;
		}
		num++;
	}
	int counter = num - 2;
	int j = n - i;
	while (1)
	{
		if (j >= (int)pow(2, counter))
		{
			j -= (int)pow(2, counter);
			arr[num - counter - 1] = 1;
		}
		else
			arr[num - counter - 1] = 0;
		if (counter == 0) break;
		counter--;
		
	}
	for (int n = 0; n < num; n++)
	{
		printf("%d", arr[n]);
	}

}
int main()
{
	int n;
	scanf("%d", &n);
	bin(n);
	return 0;
}
